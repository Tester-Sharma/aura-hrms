generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id // W-1001, E-101, H-101
  password        String   @default("12345")
  name            String
  fatherName      String?  // For Salary Register Form 27(1)
  role            String   // 'worker', 'employee', 'hr'
  designation     String?
  department      String?
  phone           String?
  email           String?
  joiningDate     DateTime @default(now())
  address         String?
  
  // Worker Specific
  hourlyRate      Float?
  shift           String?
  
  // Employee Specific
  monthlySalary   Float?
  ctc             Float?
  salaryBreakdown String?  // JSON string
  
  attendance      Attendance[]
  leaveRequests   LeaveRequest[]
  
  // New fields for Phase 2
  photo           String?   // Base64 storage
  
  // Financial Engine Fields
  esicNumber      String?   // ESIC registration number
  epfoNumber      String?   // EPFO/UAN number
  esicEnabled     Boolean   @default(false)
  epfoEnabled     Boolean   @default(true)
  advanceAmount   Float     @default(0)  // Current advance amount
  loanAmount      Float     @default(0)  // Current loan amount
  tdsEnabled      Boolean   @default(false)
  
  // Application Form Fields
  positionAppliedFor          String?
  educationInstitution        String?
  educationDegree             String?
  educationYearCompleted      String?
  previousCompany             String?
  previousPosition            String?
  previousEmploymentDates     String?
  skillsQualifications        String?  // Text area content
  referenceName               String?
  referenceRelationship       String?
  referencePhone              String?
  applicantSignature          String?  // Can store signature image as base64 or text
}

model Company {
  id          String   @id @default(uuid())
  name        String
  address     String
  logo        String?  // Base64 storage
  taxId       String?
  phone       String?
  email       String?
  website     String?
  createdAt   DateTime @default(now())
}

model Attendance {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now()) // Represents the "day" of attendance
  inTime      DateTime?
  outTime     DateTime?
  status      String   @default("Absent") // Present, Absent, Leave
  workedHours Float    @default(0)
  otHours     Float    @default(0)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model LeaveRequest {
  id          String   @id @default(uuid())
  type        String
  fromDate    DateTime
  toDate      DateTime
  reason      String
  status      String   @default("Pending") // Pending, Approved, Rejected
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

// Monthly Payroll Record for Edit Functionality
model PayrollRecord {
  id              String   @id @default(uuid())
  userId          String
  month           String   // Format: "2026-01"
  
  // Working Days
  daysWorked      Float    @default(26)
  
  // Earnings
  basic           Float    @default(0)
  hra             Float    @default(0)
  conveyance      Float    @default(0)
  otherEarnings   Float    @default(0)
  grossEarnings   Float    @default(0)
  
  // Deductions
  pf              Float    @default(0)
  esi             Float    @default(0)
  advance         Float    @default(0)
  tds             Float    @default(0)
  otherDeductions Float    @default(0)
  totalDeductions Float    @default(0)
  
  // Net
  netPayable      Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, month])
}

